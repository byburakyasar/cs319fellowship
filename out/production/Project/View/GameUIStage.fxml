<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" stylesheets="@styles/GameUI.css">
    <left>
        <VBox spacing="80">
            <!--<ImageView>
                <Image url="/pattern_1/pattern1.jpeg"/>
            </ImageView>-->
            <GridPane fx:id="solutionGrid" style="-fx-background-color: cornflowerblue"/>

            <GridPane id="cubeButtonsGrid" alignment="CENTER" hgap="10" vgap="10">
                <Button fx:id="cubeBtn1" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button fx:id="cubeBtn2" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button fx:id="cubeBtn3" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Button fx:id="cubeBtn4" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Button fx:id="cubeBtn5" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button fx:id="cubeBtn6" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            </GridPane>

            <Button id="backToMenuBtn" text="Main Menu" onAction="#backToMainMenu">
            <VBox.margin>
                <Insets left="30"/>
            </VBox.margin>
            </Button>
        </VBox>
    </left>

    <center>
        <GridPane fx:id="boardPane" gridLinesVisible="true" alignment="CENTER" minWidth="400" minHeight="400">
        </GridPane>
    </center>

</BorderPane>
