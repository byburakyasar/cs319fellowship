<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="controller.MainMenuController"
            xmlns:fx="http://javafx.com/fxml" stylesheets="@styles/MainMenu.css, @styles/Buttons.css"
            fx:id="mainBorderPane" id="mainBorderPane" >
    <top>
        <VBox alignment="TOP_CENTER">
            <Label id="qbitzLabel" text="Q-Bitz" textAlignment="CENTER">
                <VBox.margin>
                    <Insets top="75"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <BorderPane.margin>
                <Insets top="75"/>
            </BorderPane.margin>
            <Button fx:id="playBtn" text="Play" onAction="#playBtnClicked"/>
            <Button fx:id="levelSelectBtn" text="Level Select" onAction="#levelSelectBtnClicked"/>
            <Button fx:id="howToPlayBtn" text="How to Play" onAction="#howToPlayBtnClicked"/>
            <Button fx:id="settingsBtn" text="Settings" onAction="#settingsBtnClicked"/>
            <Button fx:id="creditsBtn" text="Credits" onAction="#creditsBtnClicked"/>
            <Button fx:id="exitBtn" text="Exit" onAction="#exit"/>
        </VBox>
    </center>
</BorderPane>