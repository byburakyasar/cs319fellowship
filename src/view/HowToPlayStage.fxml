<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" id="mainBorderPane"
            fx:controller="controller.HowToPlayController" stylesheets="@styles/HowToPlay.css, @styles/Buttons.css"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox alignment="CENTER">
            <Label id="howToPlayLabel" text="How To Play">
                <VBox.margin>
                    <Insets top="75"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10" id="contentVBox">
            <Label fx:id="howToLabel" > </Label>

            <HBox spacing="40" alignment="CENTER">
                <Label text="Game Mode: "/>
                <ComboBox fx:id="gameModesComboBox" value="Pattern Maching" maxWidth="400" minWidth="400">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="General Info"/>
                            <String fx:value="Pattern Matching"/>
                            <String fx:value="Racing and Rolling"/>
                            <String fx:value="From Memory"/>
                            <String fx:value="Maximum Patterns"/>
                            <String fx:value="Against Time"/>
                            <String fx:value="Painting Puzzle"/>
                            <String fx:value="Different Cubes"/>
                            <String fx:value="Two vs Two"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="BOTTOM_LEFT">
            <Button text="Main Menu" fx:id="mainMenuBtn" onAction="#backToMainMenu">
                <VBox.margin>
                    <Insets top="40" left="40" right="40" bottom="40"/>
                </VBox.margin>
            </Button>
        </VBox>
    </bottom>
</BorderPane>
